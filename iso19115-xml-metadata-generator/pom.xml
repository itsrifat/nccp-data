<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.unr.nccp</groupId>
  <artifactId>iso19115-xml-metadata-generator</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>iso19115-xml-metadata-generator</name>
  <url>http://sensor.nevada.edu/</url>
  <description>
    This is a java module that will be used to generate xml metadata files
    from nccp's raw metadata files(generated by the scripts) according to ISO 19115.
    It uses apache sis which is an implementation of ISO 19115 spec.
  </description>

  <properties>
    <sis.version>0.4</sis.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.sis.core</groupId>
      <artifactId>sis-referencing</artifactId>
      <version>${sis.version}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
